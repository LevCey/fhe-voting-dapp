{
  "name": "fhevm-voting-dapp",
  "version": "1.0.0",
  "description": "A confidential voting dApp using FHEVM and Hardhat",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "deploy": "hardhat run scripts/deploy.ts --network zama-devnet",
    "build": "esbuild frontend/index.ts --bundle --outfile=frontend/dist/bundle.js --platform=browser",
    "serve": "npx http-server ./frontend -p 8080"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "dotenv": "^17.2.1",
    "hardhat": "^2.22.2"
  },
  "dependencies": {
    "esbuild": "^0.20.2",
    "ethers": "^6.11.1",
    "fhevmjs": "^0.4.0"
  }
}
